{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "quill",
  "name": "Sorionlib",
  "colors": {
    "primary": "#8B5CF6",
    "light": "#A78BFA",
    "dark": "#7C3AED"
  },
  "font": {
    "headings": {
      "family": "Inter",
      "weight": 800
