      "weight": 400
    }
  },
  "rounded": "xl",
  "background": {
    "decoration": "windows"
  },
  "favicon": "/favicon.svg",
  "navigation": {
    "tabs": [
      {
        "tab": "Sorionlib",
        "groups": [
          {
            "group": "Getting started",
            "pages": [
              "index",
              "sorionlib/installation",
              "sorionlib/quickstart"
            ]
          },
          {
            "group": "Features & modules",
            "pages": [
              "sorionlib/features/core-utilities",
              "sorionlib/features/api-client",
              "sorionlib/features/discord-tools",
              "sorionlib/features/database-helpers",
              "sorionlib/features/error-handling"
            ]
          },
          {
            "group": "Guides",
            "pages": [
              "sorionlib/configuration",
              "sorionlib/advanced-guides",
              "sorionlib/faq"
            ]
          },
          {
            "group": "Resources",
            "pages": [
              "sorionlib/changelog",
              "sorionlib/contributing",
              "sorionlib/license"
            ]
          }
        ]
      },
      {
        "tab": "API reference",
        "groups": [
          {
            "group": "API documentation",
            "pages": [
              "api-reference/introduction"
            ]
          },
          {
            "group": "Endpoint examples",
            "pages": [
              "api-reference/endpoint/get",
              "api-reference/endpoint/create",
              "api-reference/endpoint/delete",
              "api-reference/endpoint/webhook"
            ]
          }
        ]
      }
    ],
    "global": {
      "anchors": [
        {
          "anchor": "GitHub",
          "href": "https://github.com/sorionlib",
          "icon": "github"
        },
        {
          "anchor": "Discord",
          "href": "https://discord.gg/sorionlib",
          "icon": "discord"
        }
      ]
    }
  },
  "logo": {
    "light": "/logo/logo.png",
    "dark": "/logo/logo.png"
  },
  "navbar": {
    "links": [
      {
        "label": "Support",
        "href": "https://discord.gg/sorionlib"
      }
    ],
    "primary": {
      "type": "button",
